{
  "rules": {
    "no-var": "error", // var 대신 let 또는 const 사용 강제
    "prefer-const": "error", // 변경되지 않는 변수는 const로 선언
    "eqeqeq": ["error", "always"], // 항상 ===, !== 사용
    "no-console": "warn", // console.log 사용 시 경고
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }], // 사용하지 않는 변수 경고 (단, _로 시작하는 변수는 제외)
    "no-debugger": "error", // debugger 사용 금지
    "no-alert": "warn", // alert, confirm, prompt 사용 시 경고
    "curly": "error", // 중괄호 항상 사용
    "no-multi-spaces": "error", // 여러 개의 공백 금지
    "semi": ["error", "always"], // 세미콜론 강제
    "quotes": ["error", "double"], // 문자열은 항상 큰따옴표 사용
    "comma-dangle": ["error", "never"], // 마지막 요소 콤마 금지
    "object-curly-spacing": ["error", "always"], // 객체 중괄호 안에 공백 유지
    "array-bracket-spacing": ["error", "never"], // 배열 대괄호 안에 공백 금지
    "arrow-spacing": ["error", { "before": true, "after": true }], // 화살표 함수 공백 규칙
    "space-before-blocks": "error", // 중괄호 앞 공백 유지
    "space-infix-ops": "error", // 연산자 공백 유지
    "keyword-spacing": ["error", { "before": true, "after": true }], // 키워드 앞뒤 공백 유지
    "spaced-comment": ["error", "always"], // 주석 앞 공백 유지
    "no-trailing-spaces": "error", // 불필요한 공백 금지
    "eol-last": ["error", "always"], // 파일 끝에 개행 추가
    "import/no-unresolved": "off"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"]
}
