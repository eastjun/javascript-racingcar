{
  "plugins": ["prettier"],

  "extends": ["eslint:recommended", "plugin:prettier/recommended"],

  "parserOptions": {
    "ecmaVersion": 13,
    "sourceType": "script",
    "ecmaFeatures": {
      "jsx": false
    }
  },

  "env": {
    "browser": false,
    "node": true,
    "es6": true
  },

  "ignorePatterns": ["node_modules/"],

  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ]
  }
}
