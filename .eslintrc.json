{
  "rules": {
    "import/extensions": "off",
    "no-restricted-syntax": "off",
    "no-await-in-loop": "off",
    "no-return-await": "off",
    "no-console": "off",
    "no-restricted-globals": "off",
    "class-methods-use-this": "off",
    "no-plusplus": "off"
  },
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"]
}
