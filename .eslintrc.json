{
  "rules": {
    "max-depth": ["error", { "max": 2 }]
  },
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": ["*.test.js", "console.js"],
      "rules": {
        "max-lines-per-function": ["off"]
      }
    }
  ],
  "extends": ["eslint:recommended"]
}
