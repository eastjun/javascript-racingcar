{
  // 코드 포맷을 prettier로 설정
  "plugins": ["prettier", "prettier/recommended"],

  // eslint의 룰을 기본 권장설정으로 설정
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],

  "parserOptions": {
    // 자바스크립트 버전
    "ecmaVersion": 13
  },

  "env": {
    "node": true,
    "es6": true
  },

  "ignorePatterns": ["node_modules/"],

  "rules": {}
}
