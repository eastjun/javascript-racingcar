{
  "env": {
    "browser": true,
    "es2021": true,
    "es6": true,
    "jest": true
  },
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "prettier",
    "plugin:jest/recommended",
    "plugin:prettier/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["import", "jest", "prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "none",
        "endOfLine": "auto",
        "printWidth": 100
      }
    ],
    "import/extensions": ["error", "ignorePackages"],
    "no-await-in-loop": "off",
    "no-constant-condition": "off",
    "max-lines-per-function": ["error", 10],
    "no-undef": "error",
    "no-console": "off"
  }
}
