{
  "rules": {
    "prettier/prettier": ["error", { "endOfLine": "auto" }],
    "max-depth": ["error", 2],
    "max-lines-per-function": ["error", { "max" : 10 }]
  },
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": [
    "airbnb-base",
    "eslint-config-prettier",
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "prettier",
    "eslint-plugin-prettier"
  ]
}
