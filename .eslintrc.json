{
  "rules": {
    "max-depth": ["error", 2]
  },
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "overrides": [{ 
    "files": ["src/**/*.js"],
    "rules": { "max-lines-per-function": ["error", 12] }
  }]
}
